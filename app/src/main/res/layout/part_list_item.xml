<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/partNameTextView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/part_name"
        tools:layout_editor_absoluteX="1db"
        tools:layout_editor_absoluteY="1db" />

    <TextView
        android:id="@+id/partPriceTextView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/partNameTextView"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/part_price"
        tools:layout_editor_absoluteX="1db"
        tools:layout_editor_absoluteY="1db" />

</androidx.constraintlayout.widget.ConstraintLayout>